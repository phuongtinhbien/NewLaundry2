<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Main.Fragment.AccountFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/nav_header_main"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_item_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    style="@style/textInputLayout"
                    app:boxBackgroundMode="outline"
                    android:id="@+id/acc_gender_layout">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/input_gender"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:enabled="false"
                        android:fontFamily="sans-serif"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/font_size_input"
                        android:textColor="@color/textColor"
                        android:id="@+id/acc_gender"
                        android:background="@drawable/bg_input"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    style="@style/textInputLayout"
                    app:boxBackgroundMode="outline"
                    android:id="@+id/acc_phone_layout">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/input_phone_number"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:enabled="false"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/font_size_input"
                        android:textColor="@color/textColor"
                        android:id="@+id/acc_phone"
                        android:background="@drawable/bg_input"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    style="@style/textInputLayout"
                    app:boxBackgroundMode="outline"
                    android:id="@+id/acc_address_layout">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/input_address"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:enabled="false"
                        android:textColorHint="@color/textColorHint"
                        android:textSize="@dimen/font_size_input"
                        android:textColor="@color/textColor"
                        android:id="@+id/acc_address"
                        android:background="@drawable/bg_input"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"

                android:foreground="?selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/card_margin"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="@dimen/padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/about"
                        android:textColor="@color/charcoal_grey"
                        android:textSize="@dimen/font_size_title_item"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.design.card.MaterialCardView>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_logout"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:padding="@dimen/margin_item"
                android:src="@drawable/ic_log_out"
                android:tooltipText="@string/log_out"
                app:fabSize="normal"
                app:rippleColor="@color/colorAccent" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>