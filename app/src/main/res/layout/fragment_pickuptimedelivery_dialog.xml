<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"

    android:orientation="vertical"
    tools:context=".PickupTimeDeliveryDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_layout"
            android:layout_weight="1"
            android:id="@+id/pickup_time_panel"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_item"
                android:drawablePadding="@dimen/margin_item"
                android:fontFamily="sans-serif-black"
                android:text="@string/date_time_pick_up"
                android:textColor="@color/textColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/prepare_order_date_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:text="Today, AUG 30"
                android:textSize="@dimen/font_size_text_mini" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_item"
                android:layout_height="wrap_content"
                android:scrollbarSize="0.1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="9:00 - 10:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                </LinearLayout>
            </HorizontalScrollView>
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:id="@+id/date_pickup"
                android:calendarViewShown="false"></DatePicker>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_layout"
            android:layout_marginLeft="@dimen/margin_item"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_item"
                android:drawablePadding="@dimen/margin_item"
                android:fontFamily="sans-serif-black"
                android:text="@string/delivery"
                android:textColor="@color/textColor"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/prepare_order_date_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:text="Today, AUG 30"
                android:textSize="@dimen/font_size_text_mini" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_item"
                android:layout_height="wrap_content"
                android:scrollbarSize="0.1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"

                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="9:00 - 10:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                    <com.robertlevonyan.views.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:mcv_backgroundColor="@color/cool_grey"
                        app:mcv_selectedBackgroundColor="@color/colorAccent"
                        app:mcv_textColor="@color/white"
                        app:mcv_selectable="true"
                        android:layout_margin="@dimen/margin_item"
                        app:mcv_chipText="11:00 - 12:30"></com.robertlevonyan.views.chip.Chip>
                </LinearLayout>
            </HorizontalScrollView>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:id="@+id/date_delivery"
                android:calendarViewShown="false"></DatePicker>

        </LinearLayout>
        <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/card_margin"
            android:paddingBottom="@dimen/margin_item"
            app:backgroundTint="@color/colorAccent"
            android:id="@+id/input_dialog_confirm"
            android:textAllCaps="false"/>
    </LinearLayout>


</LinearLayout>