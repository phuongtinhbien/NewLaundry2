<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:gravity="center_horizontal|center_vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_prepare_order_icon"
                android:layout_width="@dimen/item_prepare_order_size"
                android:layout_height="@dimen/item_prepare_order_size"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cloth" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_prepare_order_txt_title"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/title_category"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font_size_title_item" />
                <TextView
                    android:id="@+id/item_prepare_order_txt_price"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_item"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/category_price"
                    android:textColor="@color/startGradientFail"
                    android:textSize="@dimen/font_size_sub_title" />
            </LinearLayout>
            <com.robertlevonyan.views.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_item"
                android:layout_gravity="center|left"
                app:mcv_chipText="wash &amp; iron"
                app:mcv_textColor="@color/white"
                app:mcv_backgroundColor="@color/colorAccent"></com.robertlevonyan.views.chip.Chip>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:orientation="vertical">
                <include
                    layout="@layout/badge">
                </include>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/headerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:tint="@color/startGradientFail"
            app:srcCompat="@drawable/ic_clear" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/cool_grey"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/margin_item"
        android:layout_marginHorizontal="@dimen/margin_item_horizontal"
        android:layout_height="0.1dp"/>
</android.support.constraint.ConstraintLayout>