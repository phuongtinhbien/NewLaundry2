<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_item_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_weight="1"
        android:id="@+id/pickup_time_panel"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_item"
            android:drawablePadding="@dimen/margin_item"
            android:fontFamily="sans-serif-black"
            android:text="@string/date_time_pick_up"
            android:textColor="@color/textColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/prepare_order_date_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-black"
            android:text="Today, AUG 30"
            android:textSize="@dimen/font_size_text" />

        <TextView
            android:id="@+id/prepare_order_time_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="9:30 AM"
            android:textSize="@dimen/font_size_text" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_marginLeft="@dimen/margin_item"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_item"
            android:drawablePadding="@dimen/margin_item"
            android:fontFamily="sans-serif-black"
            android:text="@string/delivery"
            android:textColor="@color/textColor"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/prepare_order_date_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-black"
            android:text="Today, AUG 30"
            android:textSize="@dimen/font_size_text" />

        <TextView
            android:id="@+id/prepare_order_time_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="9:30 AM"
            android:textSize="@dimen/font_size_text" />


    </LinearLayout>
    </LinearLayout>

    <android.support.design.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_time"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/item_prepare_order_btn_schedule"
      />
</LinearLayout>