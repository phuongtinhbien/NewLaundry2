<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.1</item>
        <!-- <item name="android:textAllCaps">true</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_size_toolbar</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="textTopic" parent="">
        <item name="android:layout_margin">12dp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
        <item name="android:text">@string/service</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/font_size_topic</item>
    </style>

    <style name="translucentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/margin_item_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>

    </style>


    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/endGradient</item>
        <item name="colorPrimaryDark">@color/startGradient</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

    </style>

    <style name="error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/endGradientFail</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlineBox">
       <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomLeft">10dp</item>
        <item name="boxCornerRadiusTopLeft">10dp</item>
        <item name="boxCornerRadiusBottomRight">10dp</item>
        <item name="boxCornerRadiusTopRight">10dp</item>
        <item name="errorTextAppearance">@style/error</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxPaddingLeft">@dimen/input_drawable_padding</item>
        <item name="boxPaddingRight">@dimen/input_drawable_padding</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


</resources>
